<h1>Records Index</h1>
<h3><%= @records.count%>/<%= Record.count %></h3>
<ul>
  <% @records.each do |record| %>
    <li><%= link_to record.title, record %></li>
  <% end %>
</ul>
<%if can?(:create, Record)%>
    <%= link_to "New Book record", new_record_path%>
<% end %>
<%= raw pagy_nav(@pagy) if @pagy.pages > 1%>
<%= button_to "Log out", destroy_user_session_path, method: :delete%>
<%= render 'shared/pagy_nav', pagy: @pagy %>

<% @books.each do |book| %>
  <div>
    <h3><%= book.title %></h3>
    <p><%= book.author %></p>
    <p><%= book.description %></p>
  </div>
<% end %>

<%= render 'shared/pagy_nav', pagy: @pagy %>